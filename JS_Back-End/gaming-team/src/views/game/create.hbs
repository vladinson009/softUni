<main id="create">
    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}
    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Game Code Offer</h1>
            <h4>Post your code to sell</h4>
            <form method="POST">
                <label>Platform:</label>
                <select id="platform" name="platform">
                    {{#each options}}
                    <option value="{{value}}" {{#if selected}}selected{{/if}}>{{content}}</option>
                    {{/each}}
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{data.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{data.image}}" placeholder="http://...">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{data.price}}">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre" value="{{data.genre}}">
                <label>Description:</label>
                <textarea id="description" name="description">{{data.description}}</textarea>
                <input type="submit" id="btn" value="CREATE"></input>
            </form>
        </div>
    </section>
</main>