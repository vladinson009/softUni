<main id="search">
    <section class="game-search">
        <h1>Search</h1>

        <form class="search-form" action="/search/criteria" method="GET">
            <input type="text" class="search-game" name="name" value="{{fields.name}}" placeholder="Search here...">
            <select id="platform" name="platform">
                {{#each options}}
                <option value="{{value}}" {{#if selected}}selected{{/if}}>{{content}}</option>
                {{/each}}
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>
        {{#each games}}
        <div class="search-result">
            <div class="search-list">
                <div class="game">
                    <div class="game-img">
                        <img src="{{image}}">
                    </div>
                    <div class="game-info">
                        <h1>{{name}}</h1>
                        <p><span>Platform: </span>{{platform}}</p>
                        <p><span>Ganre: </span>{{genre}}</p>
                        <p><span>Price: </span>${{price}}</p>
                    </div>

                    <a href="/games/details/{{_id}}" class="btn-details">Details</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="no-match">
            <p>No match was found!</p>
        </div>
        {{/each}}
    </section>
</main>