{{#with movie}}
<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{genre}}</p>
                        <p class="card-director">Directror: {{director}}</p>
                    </div>
                    <div class="second-info">
                        <p class="card-year">Year: {{year}}</p>
                        <p class="card-ranking">Rating: <span id="stars">{{{ratingStars}}}</span></p>
                    </div>

                </div>

                <p class="disc">Description: {{description}}</p>
            </div>
            {{#if isOwner}}
            <div class="details-btn">
                <a href="/cast/{{_id}}/attach" id="cast-button">Attach</a>
                <a href="/movies/{{_id}}/edit" id="edit-button">Edit</a>
                <a href="/movies/{{_id}}/delete" id="delete-button">Delete</a>
            </div>
            {{/if}}
        </div>
        <div class="card_right">
            <img src="{{imageUrl}}" alt="{{title}}">
        </div>
    </div>
    <div class="main-cast-card">
        {{#each cast}}
        <div class="cast-card">
            <div class="card-img">
                <img src="{{cast.imageUrl}}" alt="{{cast.name}}">
            </div>
            <div class="cast-info">
                <h1>Name {{cast.name}}</h1>
                <h3>Age: {{cast.age}}</h3>
                <h3>Born: {{cast.born}}</h3>
                <h3>Name in Movie: {{nameInMovie}}</h3>
            </div>
        </div>
        {{/each}}
    </div>
</section>
{{/with}}