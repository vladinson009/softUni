<section id="attachCast">
    <div class="attachCastSection">
        <h1>Attach New Cast</h1>
        <div class="attach-form">
            <h2>{{movie.title}}</h2>
            <img class="movie" src="{{movie.imageUrl}}">
            <form method="POST">
                <label for="nameInMovie">Name in movie</label>
                <input id="nameInMovie" type="text" name="nameInMovie">
                <label for="cast">Cast</label>
                <select id="cast" name="cast">
                    <option value="" selected disabled>--------</option>
                    {{#each cast}}<option value="{{_id}}">{{name}}</option>{{/each}}

                </select>
                <div id="center-btn">
                    <button id="create-btn">Add Cast</button>
                </div>
            </form>
        </div>
    </div>
</section>