{{#if isSearch}}
<section id='search'>
  <h1>Search</h1>
  <form action='/search/movies' method='GET' class='form'>
    <input type='text' class='search' name='title' placeholder='Title...' value="{{values.title}}" />
    <input type='text' name='genre' class='genre' placeholder='Genre...' value="{{values.genre}}" />
    <input type='number' name='year' class='year' placeholder='Year...' value="{{values.year}}" />
    <input type='submit' value='search' />
  </form>
</section>
{{/if}}
<section id='catalog'>
  <h1>All Movies</h1>
  <div class='band'>
    {{#each movies}}
    {{> movieCard}}
    {{else}}
    <div class="no-posts">
      <p class="no-offer">There are no posts yet...</p>
    </div>
    {{/each}}
  </div>
</section>