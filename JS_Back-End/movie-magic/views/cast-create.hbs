<section id="create-cast">
    <div class="createCastSection">
        <div class="info-cast">
            <h2>"You're gonna need a bigger boat." â€” "Jaws," 1975.</h2>
        </div>

        <form method="POST" class="createCastForm">
            <h2>Add Cast</h2>
            {{#if err}}<p class='formError'>{{err}}</p>{{/if}}
            <ul class="noBullet">
                <li>
                    <label for="name">Name:</label>
                    <input type="text" class="inputFields" id="name" name="name" value="{{body.name}}" />
                </li>
                <li>
                    <label for="age">Age:</label>
                    <input type="number" class="inputFields" id="age" name="age" value="{{body.age}}" />
                </li>
                <li>
                    <label for="born">Born:</label>
                    <input type="text" class="inputFields" id="born" name="born" value="{{body.born}}" />
                </li>
                <li>
                    <label for="name-in-movie">Name in Movie:</label>
                    <input type="text" class="inputFields" id="name-in-movie" name="" value="" disabled />
                </li>
                <li>
                    <label for="image">Cast Image:</label>
                    <input type="text" class="inputFields" id="image" name="imageUrl" value="{{body.imageUrl}}" />
                </li>
                <li id="center-btn">
                    <button id="create-btn">Add Cast</button>
                </li>
            </ul>
        </form>

    </div>
</section>